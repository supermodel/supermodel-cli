{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",

    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2018"],
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "typings/*.d.ts",
    "src"
  ],
  "exclude": [
    "fixtures",
    "node_modules",
    "test"
  ]
}