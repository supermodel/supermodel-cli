        "FeatureAndBenefit": {
          "title": "Feature and Benefit",
          "type": "object",
          "properties": {
            "featureAndBenefitCode": {
              "type": "string"
            },
            "businessCode": {
              "type": "string"
            },
            "shoePart": {
              "type": "string"
            },
